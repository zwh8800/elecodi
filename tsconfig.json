{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./public/dist/",
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*"
    ]
}